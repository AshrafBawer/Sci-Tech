<%- include('../partials/header') %>

<main class="main post-form">
    <form class="ui form" action="/blog" method="POST">
        <div class="field">
          <label>Title</label>
          <input type="text" name="post[title]" placeholder="Titlte here..." required>
        </div>
        <div class="field">
          <label>Auhtor</label>
          <input type="text" name="post[author]" placeholder="Who is the author..." required>
        </div>
        <div class="field">
          <label>Post summary / intorduction</label>
          <input type="text" name="post[intro]" placeholder="write the intro here..." required>
        </div>
        <div class="field">
            <label>Post's image</label>
            <input type="text" name="post[img]" placeholder="copy the image's url here..." required>
        </div>
        <div class="field">
            <label>Text</label>
            <textarea required name="post[body]" placeholder="write post content here..."></textarea>
        </div>
        <button class="ui button" type="submit">Submit</button>
    </form>
</main>

<%- include('../partials/footer') %>